{
  "manifest_version": 2,

  "name": "Clipper",
  "description": "A simple clipper extension",
  "version": "0.1",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },
  "chrome_url_overrides":{
    "newtab":"newtab.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["contentScript.js"]
    }
  ],
  "permissions": [
    "downloads",
    "history",
    "pageCapture",
    "tabs"
  ]
}
